<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<!-- NEW -->
<button type="button" class="btn btn-dark mb-3" data-toggle="modal" data-target="#newPostModal">
  New Post
</button>
<br>
<!-- SEARCH -->
<div class="mt-3">
  <%= form_tag(posts_path, method: "get", remote: true, class: "form-inline") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search in posts", class: "form-control mr-2" %>
    <%= submit_tag "Buscar", class: "btn btn-primary" %>
  <% end %>
</div>
<br>

<!-- LIST -->
<div class="row my-5" id="postList">
  <%= render @posts %>
</div>

<!-- MODAL NEW POST -->
<%= form_for(@post, remote: true) do |form| %>
<div class="modal fade" id="newPostModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="field">
          <%= form.label :content %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
            <div class="actions">
              <%= form.submit "Save", class: "btn btn-primary" %>
            </div>
      </div>
    </div>
  </div>
</div>
<% end %>

